{% extends 'base.html.twig' %}

{% block title %}Sponsor index{% endblock %}

{% block body %}
    <h1>Sponsor index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomSP</th>
                <th>DateDebutSP</th>
                <th>MontantContrat</th>
                <th>DateFinSP</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sponsor in sponsors %}
            <tr>
                <td>{{ sponsor.id }}</td>
                <td>{{ sponsor.nomSP }}</td>
                <td>{{ sponsor.dateDebutSP ? sponsor.dateDebutSP|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sponsor.montantContrat }}</td>
                <td>{{ sponsor.dateFinSP ? sponsor.dateFinSP|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_sponsor_show', {'id': sponsor.id}) }}">show</a>
                    <a href="{{ path('app_sponsor_edit', {'id': sponsor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sponsor_new') }}">Create new</a>
{% endblock %}
