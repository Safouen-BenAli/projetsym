{% extends 'base.html.twig' %}

{% block title %}Event List{% endblock %}

{% block body %}
<h1>Event List</h1>

{{ form_start(searchForm) }}
    {{ form_row(searchForm.query) }}
    <button type="submit" class="btn btn-primary">Search</button>
{{ form_end(searchForm) }}

<ul>
    {% for event in events %}
        <li>
            <strong>{{ event.nomEV }}</strong> - {{ event.lieuEV }} ({{ event.dateEV|date('Y-m-d H:i') }})
            <a href="{{ path('app_event_show', { id: event.id }) }}">Details</a>
        </li>
    {% endfor %}
</ul>
{% endblock %}
